<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="fileAppender" class="ch.qos.logback.core.FileAppender">
        <encoder>
            <pattern>%d [%t] %-5p %logger{20}%n %m%n</pattern>
        </encoder>
        <file>test.log</file>
        <append>false</append>
    </appender>

    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%t] %-5p %logger{20}%n %m%n</pattern>
        </encoder>
    </appender>

    <logger name="com.mbocorp.tests.listeners.TimeMeasuringTestExecutionListener" level="DEBUG"/>

    <root level="DEBUG">
        <appender-ref ref="fileAppender"/>
        <appender-ref ref="consoleAppender"/>
    </root>
</configuration>
